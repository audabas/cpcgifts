<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<!-- Servlets classes java -->
	<servlet>
		<servlet-name>Cpcgifts</servlet-name>
		<servlet-class>fr.cpcgifts.CpcgiftsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>fr.cpcgifts.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SignInServlet</servlet-name>
		<servlet-class>fr.cpcgifts.NewUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GiveawayServlet</servlet-name>
		<servlet-class>fr.cpcgifts.GiveawayServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CloseGAServlet</servlet-name>
		<servlet-class>fr.cpcgifts.CloseGAServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ChangeImgServlet</servlet-name>
		<servlet-class>fr.cpcgifts.ChangeImgServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EnterGAServlet</servlet-name>
		<servlet-class>fr.cpcgifts.EnterGiveawayServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>fr.cpcgifts.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>fr.cpcgifts.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CleanEmptyGAServlet</servlet-name>
		<servlet-class>fr.cpcgifts.CleanEmptyGAServlet</servlet-class>
	</servlet>
	<!-- Mapping Java -->
	<servlet-mapping>
		<servlet-name>Cpcgifts</servlet-name>
		<url-pattern>/cpcgifts</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GiveawayServlet</servlet-name>
		<url-pattern>/giveaway-serv</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login-serv</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SignInServlet</servlet-name>
		<url-pattern>/signin-serv</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CloseGAServlet</servlet-name>
		<url-pattern>/cron/closeGA</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CleanEmptyGAServlet</servlet-name>
		<url-pattern>/cron/cleanEmptyGA</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChangeImgServlet</servlet-name>
		<url-pattern>/changeimg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EnterGAServlet</servlet-name>
		<url-pattern>/enterga</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/admin/*</url-pattern>
	</servlet-mapping>
	<!-- Jsp (vue) -->
	<servlet>
		<servlet-name>SignIn</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>UserList</servlet-name>
		<jsp-file>/users.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>Profile</servlet-name>
		<jsp-file>/profile.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>CreateGA</servlet-name>
		<jsp-file>/createGiveaway.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>Giveaway</servlet-name>
		<jsp-file>/giveaway.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>FAQ</servlet-name>
		<jsp-file>/faq.jsp</jsp-file>
	</servlet>
	<!-- Mapping jsp -->
	<servlet-mapping>
		<servlet-name>SignIn</servlet-name>
		<url-pattern>/sign</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserList</servlet-name>
		<url-pattern>/users</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Profile</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateGA</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Giveaway</servlet-name>
		<url-pattern>/giveaway</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FAQ</servlet-name>
		<url-pattern>/faq</url-pattern>
	</servlet-mapping>

	<!-- Welcome files -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


	<!-- Error -->
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>

	<!-- Sécurité -->
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/cron/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>


